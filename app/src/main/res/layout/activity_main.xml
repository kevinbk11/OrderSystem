<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  app:layout_constraintTop_toTopOf="parent">

        <!--⋏⋏⋏⋏⋏⋏⋏⋏⋏⋏標題列⋏⋏⋏⋏⋏⋏⋏⋏⋏⋏-->
        <LinearLayout style="@style/max_width_style"
                      android:background="#c1c1c1">
            <TextView style="@style/max_width_style"
                      android:text="@string/name"
                      android:textSize="20sp"/>
        </LinearLayout>
        <!--⋎⋎⋎⋎⋎⋎⋎⋎⋎⋎標題列⋎⋎⋎⋎⋎⋎⋎⋎⋎⋎-->

        <!--⋏⋏⋏⋏⋏⋏⋏⋏⋏⋏餐點種類圖示⋏⋏⋏⋏⋏⋏⋏⋏⋏⋏-->
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <!--⋏⋏⋏⋏⋏主選單圖示⋏⋏⋏⋏⋏-->
            <ScrollView
                    style="@style/max_width_style"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    tools:layout_editor_absoluteY="2dp"
                    tools:layout_editor_absoluteX="2dp">

                <LinearLayout style="@style/max_width_style"
                              android:orientation="vertical">
                    <!--第一行圖示-->
                    <LinearLayout style="@style/max_width_style">

                        <ImageButton style="@style/MenuBtn_style"
                                     android:id="@+id/btm_nd"
                                     android:src="@drawable/noodle"
                                     android:clickable="true" android:focusable="true"/>

                        <ImageButton style="@style/MenuBtn_style"
                                     android:id="@+id/btm_rc"
                                     android:src="@drawable/rice"
                                     android:clickable="true" android:focusable="true"/>

                        <ImageButton style="@style/MenuBtn_style"
                                     android:id="@+id/btm_sp"
                                     android:src="@drawable/soup"
                                     android:clickable="true" android:focusable="true"/>

                    </LinearLayout>
                    <!--第一行名稱-->
                    <LinearLayout style="@style/max_width_style">
                        <!--麵-->
                        <TextView style="@style/MenuText_style"
                                  android:text="@string/menu_nd"/>
                        <!--飯-->
                        <TextView style="@style/MenuText_style"
                                  android:text="@string/menu_rc"/>
                        <!--湯-->
                        <TextView style="@style/MenuText_style"
                                  android:text="@string/menu_sp"/>

                    </LinearLayout>
                    <!--第二行圖示-->
                    <LinearLayout style="@style/max_width_style">

                        <ImageButton style="@style/MenuBtn_style"
                                     android:id="@+id/btm_lf"
                                     android:src="@drawable/lightfood"
                                     android:clickable="true" android:focusable="true"/>

                        <ImageButton style="@style/MenuBtn_style"
                                     android:id="@+id/btm_ds"
                                     android:src="@drawable/dessert"
                                     android:clickable="true" android:focusable="true"/>

                        <ImageButton style="@style/MenuBtn_style"
                                     android:id="@+id/btm_dk"
                                     android:src="@drawable/drink"
                                     android:clickable="true" android:focusable="true"/>

                    </LinearLayout>
                    <!--第二行名稱-->
                    <LinearLayout style="@style/max_width_style">
                        <!--單-->
                        <TextView style="@style/MenuText_style"
                                  android:text="@string/menu_lf"/>
                        <!--甜-->
                        <TextView style="@style/MenuText_style"
                                  android:text="@string/menu_ds"/>
                        <!--飲-->
                        <TextView style="@style/MenuText_style"
                                  android:text="@string/menu_dk"/>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>





        </RelativeLayout>
        <!--⋎⋎⋎⋎⋎⋎⋎⋎⋎⋎餐點種類圖示⋎⋎⋎⋎⋎⋎⋎⋎⋎⋎-->

        <!--⋏⋏⋏⋏⋏⋏⋏⋏⋏⋏點餐清單⋏⋏⋏⋏⋏⋏⋏⋏⋏⋏-->
        <RelativeLayout style="@style/max_width_style">
            <LinearLayout style="@style/max_width_style"
                          android:layout_alignParentBottom="true"
                          android:background="#fffd98">
                <!--點餐數量-->
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:paddingHorizontal ="10dp"
                              android:paddingVertical = "4dp">
                    <TextView
                            style="@style/Amount_food"
                            android:id="@+id/A"/>
                    <TextView
                            style="@style/Amount_food"
                            android:id="@+id/B"/>
                    <TextView
                            style="@style/Amount_food"
                            android:id="@+id/C"/>
                </LinearLayout>
                <!--減少按鈕-->
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center"
                              android:paddingVertical = "4dp">
                    <!--微調對齊文字-->
                    <ImageButton
                            style="@style/Amount_delete"
                            android:layout_marginTop="3dp"
                            android:onClick="D1"
                            android:id="@+id/A2"/>
                    <ImageButton
                            style="@style/Amount_delete"
                            android:onClick="D2"
                            android:id="@+id/B2"/>
                    <ImageButton
                            style="@style/Amount_delete"
                            android:onClick="D3"
                            android:id="@+id/C2"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--⋎⋎⋎⋎⋎⋎⋎⋎⋎⋎點餐清單⋎⋎⋎⋎⋎⋎⋎⋎⋎⋎-->


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>